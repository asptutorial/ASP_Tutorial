@model IEnumerable<BootstrapSiteLCD.Models.Address>

@{
    ViewBag.Title = "Index";
    Layout = null;
}

<h1 class="page-header">
    @ViewBag.Title
    <small>Adresse bearbeiten</small>
</h1>

<p>
    <input type="button" class="btn-default" value="Create New" onclick="partialLoad('/Addresses/_Create/'+@ViewBag.StudId, 'GET', '_partialAddresses', 'html', '');" />
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Street)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Postcode)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StreetNo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Appendix)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.City.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Student.MatriculationNo)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Street)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Postcode)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.StreetNo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Appendix)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.City.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Student.MatriculationNo)
        </td>
        <td>
            <input type="button" class="btn-link" value="Edit" onclick="partialLoad('/Addresses/_Edit/'+  @item.Id, 'GET', '_partialAddresses', 'html', '');" /> |
            <input type="button" class="btn-link" value="Details" onclick="partialLoad('/Addresses/_Details/'+  @item.Id, 'GET', '_partialAddresses', 'html', '');" /> |
            <input type="button" class="btn-link" value="Delete" onclick="partialLoad('/Addresses/_Delete/'+  @item.Id, 'GET', '_partialAddresses', 'html', '');" />
        </td>
    </tr>
}

</table>
